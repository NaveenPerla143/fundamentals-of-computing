#include <stdio.h>

int linearSearch(int arr[], int n, int x) {

    for (int i = 0; i < n; i++) {

        if (arr[i] == x) {

            return i;

        }

    }

    return -1; 

}

int main() {

    int arr[] = {2, 4, 6, 8, 10, 12};

    int n = sizeof(arr) / sizeof(arr[0]);

    int x = 8;

    int index = linearSearch(arr, n, x);

    if (index == -1) {

        printf("Element not found.\n");

    } else {

        printf("Element found at index %d.\n", index);

    }

    return 0;

}
